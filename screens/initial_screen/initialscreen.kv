<InitialScreen>
    MDFloatLayout:
        orientation : 'vertical'

# <--- Barra de Ferramentas Superior
        MDToolbar:
            md_bg_color: 0, 1, 1, 1
            specific_text_color: app.theme_cls.primary_color
            title: 'Home'
            elevation: 0  #<---- Sombra do Toolbar
            left_action_items: [['arrow-left', lambda x: root.callback()]]
            pos_hint: {'top': 1}

        MDCard:
            orientation: 'vertical'
            size_hint: None, None
            size: 150, 150
            pos_hint: {'center_x': .25, 'center_y': .78}
            elevation: 15
            spacing: 23
            padding: 20
            ripple_behavior: True
            Image:
                source: 'img/pencil.png'
                pos_hint: {'center_x': .5, 'center_y': .8}
                size_hint: None, None
                size: '50dp', '50dp'
                allow_stretch: True
                keep_ratio: True
            MDTextButton:
                text: 'Novo Cadastro'
                font_size: 14
                pos_hint: {'center_x': .5, 'center_y': .3}
                bold: True
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                on_release: root.manager.current = 'newobject'

        MDCard:
            orientation: 'vertical'
            size_hint: None, None
            size: 150, 150
            pos_hint: {'center_x': .75, 'center_y': .78}
            elevation: 15
            spacing: 23
            padding: 20
            ripple_behavior: True
            Image:
                source: 'img/eyes.jpg'
                pos_hint: {'center_x': .5, 'center_y': 1}
                size_hint: None, None
                size: 50, 50
                allow_stretch: True
                keep_ratio: False
            MDTextButton:
                text: 'Ver Cadastros'
                font_size: 14
                pos_hint: {'center_x': .5, 'center_y': .1}
                bold: True
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
